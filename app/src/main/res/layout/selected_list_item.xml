<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_margin="1dp"

    android:background="@color/light_red_color"
    android:orientation="vertical">

    <TextView
        android:id="@+id/itemNameTVD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="Test"
        android:textColor="#000000"
        android:textSize="17dip" />

    <TextView
        android:id="@+id/itemCountTVD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemNameTVD"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="0"
        android:textColor="#000000"
        android:textSize="14dip" />

    <ImageButton
        android:id="@+id/editIVD"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="2dp"
        android:layout_below="@id/itemCountTVD"
        android:layout_alignParentRight="true"
        android:backgroundTint="@color/light_red_color"
        android:src="@drawable/ic_edit_black_24dp" />
</RelativeLayout>
