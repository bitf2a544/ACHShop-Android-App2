<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zeeshanmac.zeeshan.spoofandroidapp.Auth.EmailVerifyActivity">

    <RelativeLayout
        android:id="@+id/relative_toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/iv_back_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="6dp"
            android:src="@mipmap/ic_back_arrow"
            android:tint="@android:color/white"/>

        <TextView
            android:id="@+id/match_toolbar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vérifier vos emails"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:padding="6dp"
            android:textAlignment="textStart"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_toolbar"
        android:layout_centerHorizontal="true"
        android:text="Veuillez entrer votre email et le vérifier pour vous connecter avec votre compte"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:maxLines="4"
        android:textColor="#C0C0C0"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/reset_password_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/inputs"
        android:ems="10"
        android:hint="S'il vous plaît entrer un email"
        android:inputType="textEmailAddress"
        android:padding="10dp" />

    <Button
        android:id="@+id/reset_password_email_button"
        style="?android:textAppearanceSmall"
        android:layout_width="150dp"
        android:layout_below="@+id/reset_password_email"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimary"
        android:text="Annuler"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_marginLeft="30dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:padding="3dp"
        />

    <Button
        android:id="@+id/btn_apply"
        style="?android:textAppearanceSmall"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/button"
        android:text="Soumettre"
        android:layout_below="@+id/reset_password_email"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/reset_password_email_button"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:padding="3dp"
        />

</RelativeLayout>
